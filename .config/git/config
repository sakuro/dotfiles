[alias]
  amend = commit --no-edit --amend
  bd = !git branch --merged | fgrep -v '*' | egrep -v '\\<master\\>' | xargs -I % git branch -d %
  br = branch-root
  branch-root = merge-base master HEAD
  cdiff = diff --word-diff --word-diff-regex .
  changes = !git diff $(git branch-root)..HEAD
  issues = browse -- issues
  lsm = ls-files --modified
  pb = !git push --verbose -u origin $(git symbolic-ref --short HEAD)
  prs = browse -- pulls
  st = status -sb
  wdiff = diff --word-diff
  wiki = browse -- wiki
  wip = commit -m wip
[branch]
  autosetuprebase = always
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[commit]
  verbose = true
[core]
  commentchar = ";"
  editor = code -w
[credential]
  helper = osxkeychain
[diff]
  algorithm = histogram
[fetch]
  prune = true
[grep]
  lineNumber = true
  patternType = perl
[hub]
  protocol = https
[init]
  templateDir = ~/.config/git/templates
[log]
  abbrevCommit = true
  date = local
[merge]
  ff = false
[pager]
  diff = diff-so-fancy
[pull]
  rebase = true
[push]
  default = simple
[user]
  name = OZAWA Sakuro
  useConfigOnly = true
[include]
  path = include/user.email-fallback
[includeIf "gitdir:~/github.com/quipper/**"]
  path = include/user.email-quipper
