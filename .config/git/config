[alias]
  amend = commit --no-edit --amend
  bd = !git branch --merged | fgrep -v '*' | egrep -v '\\<master\\>' | xargs -I % git branch -d %
  br = branch-root
  branch-root = merge-base master HEAD
  cdiff = diff --word-diff --word-diff-regex .
  changes = !git diff $(git branch-root)..HEAD
  diff = diff -M
  issues = browse -- issues
  pb = !git push --verbose -u origin $(git symbolic-ref --short HEAD)
  prs = browse -- pulls
  st = status -sb
  wdiff = diff --word-diff
  wiki = browse -- wiki
  wip = commit -m wip
[branch]
  autosetuprebase = always
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[commit]
  verbose = true
[core]
  commentchar = ";"
  editor = code -w
[credential]
  helper = osxkeychain
[diff]
  algorithm = histogram
  compactionHeuristic = true
[fetch]
  prune = true
[grep]
  lineNumber = true
  patternType = perl
[include]
  path = config.local
[interactive]
  diffFilter = diff-highlight
[log]
  abbrevCommit = true
  date = local
[merge]
  ff = false
[pager]
  diff = diff-highlight | decolon | $PAGER
  log = diff-highlight | decolon | $PAGER
  show = diff-highlight | decolon | $PAGER
[pull]
  rebase = true
[push]
  default = simple
