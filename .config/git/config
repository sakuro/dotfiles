[alias]
  amend = commit --no-edit --amend
  bd = !git branch --merged | grep --fixed-strings --invert-match '*' | grep --extended-regexp --invert-match '\\<master\\>' | xargs -I % git branch --delete %
  new-branch = switch -c
  pb = !git push --verbose --set-upstream origin $(git symbolic-ref --short HEAD)
  st = status --short --branch
  wdiff = diff --word-diff=color --color=auto --word-diff-regex=[[:alnum:]_]
  wip = commit --message wip
  current-branch = symbolic-ref --short HEAD
  grep-context = grep -h -E '^ *(class|module|def|(RSpec.)?(shared_(examples|context)|context|describe|it))'
  log1 = log --oneline
[branch]
  autosetuprebase = always
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[commit]
  template = ~/.config/git/templates/commit
  verbose = true
[core]
  commentchar = ";"
  editor = code -w
[diff]
  algorithm = histogram
[fetch]
  prune = true
[grep]
  lineNumber = true
  patternType = perl
[init]
  templateDir = ~/.config/git/templates/init
  defaultBranch = main
[log]
  abbrevCommit = true
  date = local
[merge]
  ff = false
[pull]
  rebase = true
[push]
  default = simple
[rebase]
  autosquash = true
  autostash = true
[user]
  name = OZAWA Sakuro
  useConfigOnly = true
  email = 10973+sakuro@users.noreply.github.com
[include]
  path = include/credential
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
