[alias]
  amend = commit --no-edit --amend
  bd = !git branch --merged | fgrep --invert-match '*' | egrep --invert-match '\\<master\\>' | xargs -I % git branch --delete %
  pb = !git push --verbose --set-upstream origin $(git symbolic-ref --short HEAD)
  st = status --short --branch
  wdiff = diff --word-diff=color --color=auto --word-diff-regex=[[:alnum:]_]
  wip = commit --message wip
[branch]
  autosetuprebase = always
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[commit]
  verbose = true
[core]
  commentchar = ";"
  editor = code -w
[diff]
  algorithm = histogram
[fetch]
  prune = true
[grep]
  lineNumber = true
  patternType = perl
[hub]
  protocol = https
[init]
  templateDir = ~/.config/git/templates
  defaultBranch = main
[log]
  abbrevCommit = true
  date = local
[merge]
  ff = false
[pull]
  rebase = true
[push]
  default = simple
[user]
  name = OZAWA Sakuro
  useConfigOnly = true
[include]
  path = include/user.email-fallback
  path = include/credential
[includeIf "gitdir:~/github.com/quipper/**"]
  path = include/user.email-quipper
