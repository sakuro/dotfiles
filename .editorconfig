root = true

[*]
charset = utf-8
curly_bracket_next_line = false
end_of_line = lf
indent_brace_style = K&R
indent_size = 2
indent_style = space
insert_final_newline = true
spaces_around_brackets = inside
spaces_around_operators = true
trim_trailing_whitespace = true

#max_line_length = 80
#c_include_path = :
#java_class_path = :

[*.js]
quote_type = single

[*.md]
indent_size = 4

[*.rb]
quote_type = single

[*.rs]
indent_size = 4

[*.go]
indent_size = tab
indent_style = tab
tab_width = 4

[Makefile*]
indent_size = 4
indent_style = tab
