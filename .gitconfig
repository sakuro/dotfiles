[include]
	path = .gitconfig.local
[user]
	name = OZAWA Sakuro
	signingkey = 243B9E7E
	useConfigOnly = true
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	sw = checkout
	co = checkout
	mkb = checkout -b
	st = status -sb
	diff = diff -M
	egrep = grep -E
	commit = commit -v
	ci = commit -v
	unstage = rm --cached
	l = log --stat --pretty=format:'commit %C(green)%H%Creset%nAuthor: %C(blue)%an %x3c%ae%x3e%Creset%nDate:   %aD%n%n%C(cyan)    %s%Creset%n%n%w(0,4,4)%b'
	tree = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
	prs = browse --pulls
	issues = browse --issues
	wiki = browse --wiki
	track = checkout -t
	bd = !git branch --merged | fgrep -v '*' | egrep -v '\\<master\\>' | xargs -I % git branch -d %
	pb = !git push --verbose -u origin $(git symbolic-ref --short HEAD)
	amend = commit --no-edit --amend
	branches = branch
	wip = commit -m wip
[log]
	date = local
[pull]
	rebase = true
[branch]
	autosetuprebase = always
[diff]
	algorithm = histogram
	compactionHeuristic = true
[pager]
	diff = diff-highlight | emojify | $PAGER
	show = diff-highlight | emojify | $PAGER
	log = diff-highlight | emojify | $PAGER
[interactive]
	diffFilter = diff-highlight
[merge]
	ff = false
[credential]
	helper = osxkeychain
[push]
	default = simple
