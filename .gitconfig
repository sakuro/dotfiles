[include]
	path = .gitconfig.local
[user]
	name = OZAWA Sakuro
	email = sakuro@users.noreply.github.com
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	sw = checkout
	st = status -s
	cdiff = diff --word-diff=color --word-diff-regex=.
	diff = diff -M
	egrep = grep -E
	ci = commit -v
	commit = commit -v
	unstage = rm --cached
	l = log --stat --pretty=format:'commit %C(green)%H%Creset%nAuthor: %C(blue)%an %x3c%ae%x3e%Creset%nDate:   %aD%n%n%C(cyan)    %s%Creset%n%n%w(0,4,4)%b'
	tree = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
	prs = !hub browse -- pulls
	issues = !hub browse -- issues
	wiki = !hub browse -- wiki
	pr = pull-request
	track = checkout -t
	bd = !git branch --merged | fgrep -v '*' | egrep -v '\\<master\\>' | xargs -I % git branch -d %
	pb = !git push --verbose -u origin $(git symbolic-ref --short HEAD)
	ds = diff --stat
	amend = commit --no-edit --amend
	branches = branch
	wip = commit -m wip
[log]
	date = local
[pull]
	rebase = true
[branch]
	autosetuprebase = always
[diff]
	algorithm = histogram
[core]
	excludesfile = ~/.dotfiles/.gitignore_global
[merge]
	ff = false
[ghq]
	root = /Users/sakuro
[credential]
	helper = osxkeychain
[push]
	default = simple
[fetch]
	prune = true
